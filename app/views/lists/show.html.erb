<h1><strong><%= @list.name %></strong></h1>
  <div class="container">
  <% @list.movies.each do |movie|%>
  <% bookmark = Bookmark.find_by(list: @list, movie:movie) %>
    <div>
    <img src="<%=movie.poster_url%>" alt="<%= movie.title %>" width= 100px>
    <h2> <%= movie.title %> </h2>
    <p><%= movie.overview %></p>
    <%= bookmark.comment %>
    <%= link_to 'Delete this bookmark', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?????" } %>
    </div>
  <%end%>
</div>
<%= link_to "Add a movie", new_list_bookmark_path(@list)%>
<%= link_to "Back to lists", lists_path %>
